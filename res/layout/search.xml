<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#eaedf1"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#313949"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#13b9d5" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:background="#13b9d5"
                        android:src="@drawable/menu_search" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:text="Search"
                        android:textColor="#000000" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView03"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_home" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Home"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_friends" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:text="Friends"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView02"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_friends" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Brands"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_games"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_games" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Games"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_reward"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView04"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_rewards" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Rewards"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView06"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_favorites" />

                    <TextView
                        android:id="@+id/TextView06"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Favorites"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView05"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_profile" />

                    <TextView
                        android:id="@+id/TextView05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Profile"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#313949" >

                <LinearLayout
                    android:id="@+id/menu_setting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="slidingMenuAction" >

                    <ImageView
                        android:id="@+id/ImageView07"
                        android:layout_width="31dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/menu_settings" />

                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Settings"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>