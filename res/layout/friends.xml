<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaedf1"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/head" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="14dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" >

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/friends_location_button"
                         android:layout_width="58dp"
                        android:layout_height="111dp"                        
                        android:background="#eaedf1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/friends_location" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/friends_brands_button"
                        android:layout_width="58dp"
                        android:layout_height="111dp"                        
                        android:background="#eaedf1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/friends_brands" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/friends_games_button"
                        android:layout_width="58dp"
                        android:layout_height="111dp"                        
                        android:background="#eaedf1"
                         android:scaleType="fitCenter"
                        android:src="@drawable/friends_games" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" >

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/friends_friends_button"
                        android:layout_width="58dp"
                        android:layout_height="111dp"                       
                        android:background="#eaedf1"
                         android:scaleType="fitCenter"
                        android:src="@drawable/friends_friends" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7" >

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="29dp"
                        android:background="#54b4e2"
                        android:gravity="left|center"
                        android:paddingLeft="25dp"
                        android:text="Friends with same location"
                        android:textColor="#ffffff" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#54b4e2" >

                        <TableRow
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </TableRow>

                        <TableRow
                            android:id="@+id/tableRow4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

            </LinearLayout>

           <ImageButton
                android:id="@+id/first_discover"
                android:layout_width="56dp"
                android:layout_height="57dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/first_discover" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

    </FrameLayout>

</LinearLayout>